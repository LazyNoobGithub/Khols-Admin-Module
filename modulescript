local kholsmodule = {}

if _G.Injected == nil then
_G.Injected = true
end
if _G.prefix == nil then
_G.prefix = ":"
end
if _G.SelectedAvatar == nil then
_G.SelectedAvatar = "normal"
end

function Message(username,mtype,message,bottomtext)
local Message = Instance.new("Message",workspace)
local Debris = game:GetService("Debris")
local asettings = {}
local msettings = {}

asettings.Username = username
asettings.Type = mtype

msettings.Title = asettings.Username.." | "..asettings.Type
msettings.Message = message
msettings.BottomText = bottomtext

Message.Text = msettings.Title.."\n\n\n"..msettings.Message.."\n\n\n"..msettings.BottomText

Debris:AddItem(Message,5)
end

function kholsmodule:runcmd(msg)
if _G.Injected == true then
game:GetService("Players"):Chat(_G.prefix..msg)
end
end

function kholsmodule:avatar(args1)
Message("LazyNoob#3048","Warning","Some avatars may error!","Khols Admin Module")
_G.SelectedAvatar = args1
if _G.SelectedAvatar == "normal" then
	if _G.Injected == true then
		loadstring(game:HttpGet("https://paste.website/p/7db7e891-b242-4687-adde-73c013e59202.txt"))()
		notify("Ran Normal Avatar")
	else
		notify("Inject!")
	end
elseif _G.SelectedAvatar == "sky" then
	if _G.Injected == true then
	    loadstring(game:HttpGet("https://paste.website/p/331574a6-f8b2-4330-b62f-76e4bf3cd199.txt"))()
		notify("Ran Sky Avatar")
		else
		notify("Inject!")
		end
elseif _G.SelectedAvatar == "grass" then
    if _G.Injected == true then
		loadstring(game:HttpGet("https://paste.website/p/d0626b9a-ea4a-44ad-9187-894505ff7075.txt"))()
		notify("Ran Grass Avatar")
	else
		notify("Inject!")
	end
elseif _G.SelectedAvatar == "tix" then
	if _G.Injected == true then
		loadstring(game:HttpGet("https://paste.website/p/69c24f14-53fd-4ab1-b605-777e7bc9c4d7.txt"))()
		notify("Ran Tix Avatar")
		else
		notify("Inject!")
		end
	end
end
end

function kholsmodule:inject()
-- Khols Admin Injection Software By LazyNoob#3048
if _G.Injected == true then
	if notify then
    notify("Already Injected!")
    else
    print("Already Injected!")
    end
elseif _G.Injected ~= true then
    if game:GetService("Players").LocalPlayer.PlayerGui.KCoreUI:FindFirstChild("Help") then
        local latext = game:GetService("Players").LocalPlayer.PlayerGui.KCoreUI.Help.List.Prefix.Text
        local u1 = string.gsub(latext, [[The prefix is "]], "")
        local u2 = string.gsub(u1, [["]], "")
                
        _G.prefix = u2
        _G.Injected = true
        wait(0.5)
        if dnotify then
            dnotify("Injected!")
        else
            print("Injected!")
        end
    else
        if notify then
        notify("Not injected, use the help command and then inject!")
        else
        warn("Not injected, use the help command and then inject!")
        end
    end
end
end

return kholsmodule
